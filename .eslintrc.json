{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es6.json"],
  "env": {"node": true},
  "globals": {
    "Promise": "readonly"
  },
  "overrides": [
    {
      "files": ["README.md"],
      "globals": {"doctest": "readonly"},
      "rules": {
        "no-extra-semi": ["off"],
        "no-unused-vars": ["error", {"varsIgnorePattern": "^(toFahrenheit)$"}]
      }
    },
    {
      "files": ["lib/doctest.js"],
      "rules": {
        "no-multiple-empty-lines": ["error", {"max": 2, "maxEOF": 0}],
        "spaced-comment": ["error", "always", {"markers": ["/"]}]
      }
    },
    {
      "files": ["*.mjs"],
      "parser": "babel-eslint"
    }
  ]
}
